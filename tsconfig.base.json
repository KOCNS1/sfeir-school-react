{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@libs/design": [
        "libs/design/src/index.ts"
      ],
      "variables": [
        "libs/design/src/lib/styles/_variables.scss"
      ],
      "shadows": [
        "libs/design/src/lib/styles/_shadows.scss"
      ]
    }
  },
  "include": [
    "./jest-setup.ts"
  ],
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
